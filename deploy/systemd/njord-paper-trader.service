[Unit]
Description=Njord Paper Trader
After=network-online.target

[Service]
User=trade
WorkingDirectory=%h/njord_quant
Environment=PYTHONUNBUFFERED=1
ExecStart=%h/njord_quant/venv/bin/python -m apps.paper_trader --config %h/njord_quant/config/base.yaml
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
